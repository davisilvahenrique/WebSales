@{
    ViewData["Title"] = "Sales Records";
}

<h2 class="text">@ViewData["Title"]</h2>
<hr />

<noscript>
    <div class="alert alert-danger">
        JavaScript is disabled in your browser. Please enable JavaScript to use this form.
    </div>
</noscript>

<div id="divMain" style="display: none;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form class="form-horizontal" asp-action="SimpleSearch">
                <fieldset>
                    <legend>Simple search</legend>
                    <div class="form-group mb-3">
                        <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-outline-light">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form class="form-horizontal" asp-action="GroupingSearch">
                <fieldset>
                    <legend>Grouping search</legend>
                    <div class="form-group mb-3">
                        <label for="minDate" class="col-lg-2 control-label">Min Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label for="maxDate" class="col-lg-2 control-label">Max Date</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-outline-light">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("divMain").style.display = "block";
</script>
